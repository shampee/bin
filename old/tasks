#!/bin/dash
# vim: filetype=sh
#
# http://github.com/mitchweaver/bin
#
# Simple dmenu task manager / todo
#

file="${HOME}/var/files/tasks"

len=$(cat $file | wc -l)
action="cat $file | menu -l $len -p 'Task:' "
cmd="$(eval $action)"
while [ -n "$cmd" ]; do
	if [ "$(grep ^$cmd $file)" ]; then
		grep -v "^$cmd" "$file" > /tmp/todo
		mv /tmp/todo "$file"
        len=$((len - 1))
	else
		echo "$cmd" >> "$file"
        len=$((len + 1))
	fi
    action="cat $file | menu -l $len -p 'Task:'"
	cmd="$(eval $action)"
done
