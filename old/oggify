#!/bin/dash
# vim: filetype=sh
#
# http://github.com/mitchweaver/bin
#
# mass convert to ogg
#

go() {
    for ext ; do
        find . -name "*.$ext" -exec bash -c \
            'ffmpeg -i "{}" -y -c:a \
            libvorbis -ab 320k "${0/.ext}.ogg" && \
            rm "$0"' {} \; &
    done
}

go opus aac flac mp3 wav mp4 webm m4a wma
