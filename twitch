#!/bin/dash
#
# http://github.com/mitchweaver/bin
#
# dmenu interface for twitch through mpv/youtube-dl
#

# ------- put your streams here -------- #
streams=\
"
ESL_CSGO
shroud
gAmErCaRL160
vihart
Sweet_Anita
DreamHackCS
DrDisrespect
"
# ------------------------------------- #

mkdir /tmp/twitch

for i in $streams ; do
    {
        # test if stream is up
        youtube-dl -s http://twitch.tv/$i > /dev/null
        
        # if so, add to our list
        [ $? -eq 0 ] && touch /tmp/twitch/$i
    } &
done

# wait for background processes to finish
wait

# check if any were online
if [ -z "$(ls /tmp/twitch)" ] ; then
    notify-send "No streams online"
    rm -r /tmp/twitch
    exit
fi

name=$(\
for i in $streams ; do
    [ -f /tmp/twitch/$i ] || continue
    echo $i
    rm /tmp/twitch/$i
done | menu -p 'Stream:')

if [ -n "$name" ] ; then
    mpv "$@" https://twitch.tv/$name &
    renice 999 $$ > /dev/null
fi

rm -r /tmp/twitch
